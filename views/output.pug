extends layout 

block content
    section
        #main.container
            #main2.clearfix
                #content 
                    p.fs-1.text-center 추천 결과
                    #results_list
                        ul.row 
                            each a in Data
                                .results_item.col-md-4
                                    .col-md-12.mt-2.mb-2.border.border-success
                                        .plant_rank 
                                            p.fs-3.text-center #{a.rank} 순위
                                        .plant_name 
                                            a.fs-5(href='/detail/'+a.plant_num)=a.plant_name
                                        .plant_image
                                            a(href='/detail/'+a.plant_num)
                                                img(src=a.image href='/detail/'+a.id)
                    
                    #js-btn-wrap.d-grid.mx-auto
                        a.button.btn.btn-outline-success(href='javascript:;' role = "button") 다음 추천 보기
                    .star-ratings
                        form#myform(name='myform' method='post')
                            fieldset
                                legend  추천이 마음에 드시나요
                                
                                input#rate1(type='radio' name='rating' value='5')
                                label(for='rate1') ⭐
                                
                                input#rate2(type='radio' name='rating' value='4')
                                label(for='rate2') ⭐
                                
                                input#rate3(type='radio' name='rating' value='3')
                                label(for='rate3') ⭐
                                
                                input#rate4(type='radio' name='rating' value='2')
                                label(for='rate4') ⭐
                                input#rate5(type='radio' name='rating' value='1')
                                label(for='rate5') ⭐
                            .d-grid
                                button.btn.btn-outline-success(type='submit') 입력 완료







    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='/output.js')



    