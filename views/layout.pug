doctype html
html
  head
    title PlantGardner
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    link(rel='stylesheet', href='/stylesheets/style.css')
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  body
    .wrap
      .header
        .clearfix
          nav#navbar.navbar.navbar-expand-md.navbar-light.fixed-top
            .container#bar
              a#logoDiv.navbar-brand(href='/')
                img#imgLogo(src='/images/logo.png')
              button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
              #navbarSupportedContent.collapse.navbar-collapse
                ul#menu.navbar-nav.nav-fill
                  li.nav-item
                    a#tt.nav-link(href = '/') Home
                  li.nav-item
                    a#tt.nav-link(href='/aboutUs') About Us
                  li.nav-item
                    a#tt.nav-link(href='/recommend') Recommend
                  li.nav-item
                    a#tt.nav-link(href='/search') Search 
                  li.nav-item
                    a#tt.nav-link(href='/admin') admin
                  if !user
                    li.nav-item
                      a#tt.nav-link(href='/login') Login
                  else
                    li.nav-item 
                      a#tt.nav-link(href='/logout') Logout
    
